<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="467.0" prefWidth="600.0"
            style="-fx-background-color: #121212;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.TelaListagemVendasController">

   <children>

      <Button fx:id="btnInfo" layoutX="245.0" layoutY="355.0"
              mnemonicParsing="false" onAction="#btnInfoClick"
              prefHeight="30.0" prefWidth="110.0" text="Info"
              style="-fx-background-color: #bb86fc; -fx-text-fill: #121212; -fx-font-weight: bold; -fx-border-color: #9d6dfc; -fx-border-width: 2px; -fx-border-radius: 5px;">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>

      <TextField fx:id="txtPesquisa" layoutX="65.0" layoutY="82.0"
                 prefHeight="30.0" prefWidth="470.0" promptText="Insira a busca"
                 style="-fx-background-color: #1f1f1f; -fx-border-color: #3c3c3c; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #aaaaaa;">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>

      <TableView fx:id="tabelaVendas" layoutX="65.0" layoutY="127.0"
                 onMouseClicked="#TableViewClick" prefHeight="200.0" prefWidth="470.0"
                 style="-fx-background-color: #1f1f1f; -fx-border-color: #3c3c3c;" />

      <Button fx:id="btnFechar" layoutX="245.0" layoutY="408.0"
              mnemonicParsing="false" onAction="#btnFecharClick"
              prefHeight="30.0" prefWidth="110.0" text="Fechar"
              style="-fx-background-color: #bb86fc; -fx-text-fill: #121212; -fx-font-weight: bold; -fx-border-color: #9d6dfc; -fx-border-width: 2px; -fx-border-radius: 5px;">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>

      <Label fx:id="lblListagemVendas" layoutX="88.0" layoutY="24.0"
             style="-fx-text-fill: #e0e0e0;"
             text="LISTAGEM DE VENDAS DO SISTEMA">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Label>

   </children>
</AnchorPane>
